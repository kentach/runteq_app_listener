<div class="container d-flex justify-content-center py-5">
  <div class="col-12 col-md-6 col-lg-4">

    <h2 class="mb-4 text-center fw-bold display-6">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 html: { class: "shadow-sm p-4 rounded-4 bg-white" }) do |f| %>

      <!-- メール -->
      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label fw-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3 shadow-sm" %>
      </div>

      <!-- パスワード -->
      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label fw-semibold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-3 shadow-sm" %>
      </div>

      <!-- Remember me -->
      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
        </div>
      <% end %>

      <!-- ログインボタン -->
      <div class="d-grid mt-3">
        <%= f.submit "ログイン", class: "btn btn-primary btn-lg fw-bold rounded-pill shadow-sm" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
