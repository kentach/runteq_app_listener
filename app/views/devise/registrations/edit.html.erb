<div class="container d-flex justify-content-center py-5">
  <div class="col-12 col-md-6 col-lg-5">

    <h2 class="mb-4 text-center fw-bold display-6">アカウント編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "shadow-sm p-4 rounded-4 bg-white" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email -->
      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label fw-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3 shadow-sm" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-info">
          現在、確認中のメールアドレス: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- 新しいパスワード -->
      <div class="mb-3">
        <%= f.label :password, "新しいパスワード（変更しない場合は空欄）", class: "form-label fw-semibold" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-3 shadow-sm" %>
        <% if @minimum_password_length %>
          <small class="text-muted">最低 <%= @minimum_password_length %> 文字</small>
        <% end %>
      </div>

      <!-- 新しいパスワード（確認） -->
      <div class="mb-3">
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label fw-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-3 shadow-sm" %>
      </div>

      <!-- 現在のパスワード -->
      <div class="mb-3">
        <%= f.label :current_password, "現在のパスワード（変更を確定するために必要）", class: "form-label fw-semibold" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control rounded-3 shadow-sm" %>
      </div>

      <!-- 更新ボタン -->
      <div class="d-grid mt-4">
        <%= f.submit "更新する", class: "btn btn-primary btn-lg fw-bold rounded-pill shadow-sm" %>
      </div>
    <% end %>

    <hr class="my-4">

    <!-- アカウント削除 -->
    <h3 class="mt-5 text-center fw-bold">アカウント削除</h3>
    <div class="d-grid mb-5 text-center">
      <%= button_to "アカウントを削除する", registration_path(resource_name),
          method: :delete,
          data: { confirm: "本当に削除しますか？" },
          class: "btn btn-danger btn-lg fw-bold rounded-pill shadow-sm" %>
    </div>
  </div>
</div>
