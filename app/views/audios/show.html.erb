<div class="container" style="max-width: 600px; margin-top: 30px;">

  <!-- 戻るボタン -->
  <%= link_to "＜戻る", textbook_path(@textbook), class: "text-dark text-decoration-none" %>

  <!-- チャプター情報 -->
  <div class="mt-4">
    <h2><%= @chapter.title %></h2>
    <p class="text-muted">教材: <%= @textbook.name %></p>
  </div>

  <!-- 音声プレイヤー -->
  <div class="mt-3">
    <audio controls>
        <source src="/audio_files/<%= @audio.file_name %>" type="audio/mpeg">
        お使いのブラウザは audio タグに対応していません。
    </audio>
  </div>

  <!-- 複数音声がある場合の一覧（任意） -->
  <% @chapter.audios.each do |audio| %>
    <div class="mt-2">
      <%= link_to audio.file_name, textbook_chapter_audio_path(@textbook, @chapter, audio), class: "text-decoration-none" %>
    </div>
  <% end %>

</div>
<%= render "shared/footer" %>